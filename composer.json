{
    "name": "ck-ws/zfc-shib",
    "type": "library",
    "description": "Shibboleth authentication for Laminas",
    "homepage": "https://github.com/ck-ws/ZfcShib",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Ivan Novakov",
            "homepage": "http://novakov.cz/"
        },
        {
            "name": "Christoph Kreutzer",
            "homepage": "https://github.com/christophkreutzer"
        }
    ],
    "require": {
        "php": "^7.3",
        "laminas/laminas-authentication": "^2.9.0",
        "laminas/laminas-modulemanager": "^2.11.0",
        "laminas/laminas-loader": "^2.8.0",
        "laminas/laminas-dependency-plugin": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.9",
        "laminas/laminas-coding-standard": "^2.3.0"
    },
    "autoload": {
        "psr-0": {
            "ZfcShib\\": "src/"
        },
        "classmap": [
            "Module.php"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "ZfcShibTest\\": "tests/unit/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always --configuration tests/phpunit.xml"
    },
    "config": {
        "allow-plugins": {
            "laminas/laminas-dependency-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
